# 应用配置
APP_NAME=SFire-Admin-API
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# 服务器配置
HOST=0.0.0.0
PORT=8000

# MySQL 数据库配置
# 注意: 如需与小程序共享数据库，请确保以下配置与小程序项目一致
# 数据库服务端路径参考: E:\project\sfire-ai\database (MySQL data目录)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_DATABASE=sfire_admin

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 配置
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 跨域配置
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# 第三方 API 配置（Dashboard 监控用）
# Tikhub API Key（可选，用于获取 Tikhub 账户余额）
TIKHUB_API_KEY=
# OpenAI API Key（可选，用于获取 OpenAI 账户余额）
OPENAI_API_KEY=

